<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/PopularOnAnimalFlix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Popular on AnimalFlix"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/DumboMoviePoster"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/DumboMoviePoster"
        android:layout_width="397dp"
        android:layout_height="545dp"
        app:srcCompat="@drawable/jumbo_movie_poster"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/DogGoneTroubleMoviePoster"
        android:layout_width="100dp"
        android:layout_height="144dp"
        app:layout_constraintStart_toStartOf="@id/PopularOnAnimalFlix"
        app:layout_constraintTop_toBottomOf="@id/PopularOnAnimalFlix"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.25"
        app:srcCompat="@drawable/doggonetrouble" />

    <ImageView
        android:layout_width="20sp"
        android:layout_height="20sp"
        app:srcCompat="@drawable/animalflix_logo"
        app:layout_constraintTop_toTopOf="@id/DogGoneTroubleMoviePoster"
        app:layout_constraintBottom_toBottomOf="@id/DogGoneTroubleMoviePoster"
        app:layout_constraintVertical_bias="0.025"
        app:layout_constraintStart_toStartOf="@id/DogGoneTroubleMoviePoster"
        app:layout_constraintEnd_toEndOf="@+id/DogGoneTroubleMoviePoster"
        app:layout_constraintHorizontal_bias="0.01" />


    <ImageView
        android:id="@+id/RatatouilleMoviePoster"
        android:layout_width="100dp"
        android:layout_height="144dp"
        app:layout_constraintStart_toEndOf="@id/DogGoneTroubleMoviePoster"
        app:layout_constraintTop_toBottomOf="@id/PopularOnAnimalFlix"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.25"
        app:srcCompat="@drawable/ratatouille" />

    <ImageView
        android:id="@+id/Sing2MoviePoster"
        android:layout_width="100dp"
        android:layout_height="144dp"
        app:layout_constraintStart_toEndOf="@id/RatatouilleMoviePoster"
        app:layout_constraintTop_toBottomOf="@id/PopularOnAnimalFlix"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.25"
        app:srcCompat="@drawable/sing2" />

    <ImageView
        android:id="@+id/TurboMoviePoster"
        android:layout_width="100dp"
        android:layout_height="144dp"
        app:layout_constraintStart_toEndOf="@id/Sing2MoviePoster"
        app:layout_constraintTop_toBottomOf="@id/PopularOnAnimalFlix"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.25"
        app:srcCompat="@drawable/turbo" />

    <View
        android:id="@+id/colored_bar"
        android:layout_width="450dp"
        android:layout_height="65dp"
        android:layout_marginTop="108dp"
        android:background="@color/darkgrey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/Home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home"
        android:textColor="@color/white"
        android:textSize="12.5sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/DogGoneTroubleMoviePoster"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/DogGoneTroubleMoviePoster"
        app:layout_constraintEnd_toEndOf="@id/DogGoneTroubleMoviePoster"/>

    <TextView
        android:id="@+id/ComingSoon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ComingSoon"
        android:textColor="@color/lightgrey"
        android:textSize="12.5sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/RatatouilleMoviePoster"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/RatatouilleMoviePoster"
        app:layout_constraintEnd_toEndOf="@id/RatatouilleMoviePoster"/>

    <TextView
        android:id="@+id/PlaySomething"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PlaySomething"
        android:textColor="@color/lightgrey"
        android:textSize="12.5sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/Sing2MoviePoster"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/Sing2MoviePoster"
        app:layout_constraintEnd_toEndOf="@id/Sing2MoviePoster"/>

    <TextView
        android:id="@+id/Downloads"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Downloads"
        android:textColor="@color/lightgrey"
        android:textSize="12.5sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/TurboMoviePoster"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/TurboMoviePoster"
        app:layout_constraintEnd_toEndOf="@id/TurboMoviePoster"/>

    <TextView
        android:id="@+id/TVShows"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TV Shows"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/DumboMoviePoster"
        app:layout_constraintBottom_toBottomOf="@id/DumboMoviePoster"
        app:layout_constraintVertical_bias="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.2" />

    <TextView
        android:id="@+id/Movies"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Movies"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/DumboMoviePoster"
        app:layout_constraintBottom_toBottomOf="@id/DumboMoviePoster"
        app:layout_constraintVertical_bias="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502" />

    <TextView
        android:id="@+id/MyList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My List"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/DumboMoviePoster"
        app:layout_constraintBottom_toBottomOf="@id/DumboMoviePoster"
        app:layout_constraintVertical_bias="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.75" />

    <TextView
        android:id="@+id/MyList1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My List"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/DumboMoviePoster"
        app:layout_constraintBottom_toBottomOf="@id/DumboMoviePoster"
        app:layout_constraintVertical_bias="0.95"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.2" />

    <ImageView
        android:id="@+id/plusbutton"
        android:layout_width="18sp"
        android:layout_height="18sp"
        app:srcCompat="@drawable/plusbutton"
        app:layout_constraintTop_toTopOf="@id/DumboMoviePoster"
        app:layout_constraintBottom_toBottomOf="@id/DumboMoviePoster"
        app:layout_constraintVertical_bias="0.91"
        app:layout_constraintStart_toStartOf="@id/MyList1"
        app:layout_constraintEnd_toEndOf="@id/MyList1" />

    <ImageView
        android:id="@+id/playsymbol"
        android:layout_width="25sp"
        android:layout_height="25sp"
        android:elevation="10dp"
        app:srcCompat="@drawable/playsymbol"
        app:layout_constraintTop_toTopOf="@id/PlayButton"
        app:layout_constraintBottom_toBottomOf="@id/PlayButton"
        app:layout_constraintEnd_toEndOf="@id/PlayButton"
        app:layout_constraintStart_toStartOf="@id/PlayButton"
        app:layout_constraintHorizontal_bias="0.2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PLAY"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="15sp"
        android:elevation="10dp"
        app:layout_constraintTop_toTopOf="@id/PlayButton"
        app:layout_constraintBottom_toBottomOf="@id/PlayButton"
        app:layout_constraintEnd_toEndOf="@id/PlayButton"
        app:layout_constraintStart_toStartOf="@id/PlayButton"
        app:layout_constraintHorizontal_bias="0.7" />

    <Button
        android:id="@+id/PlayButton"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:backgroundTint="@color/white"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="@id/DumboMoviePoster"
        app:layout_constraintBottom_toBottomOf="@id/DumboMoviePoster"
        app:layout_constraintVertical_bias="0.95"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/Info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Info"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/DumboMoviePoster"
        app:layout_constraintBottom_toBottomOf="@id/DumboMoviePoster"
        app:layout_constraintVertical_bias="0.95"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.75" />

    <ImageView
        android:id="@+id/infobutton"
        android:layout_width="21sp"
        android:layout_height="21sp"
        app:srcCompat="@drawable/infobutton"
        app:layout_constraintTop_toTopOf="@id/DumboMoviePoster"
        app:layout_constraintBottom_toBottomOf="@id/DumboMoviePoster"
        app:layout_constraintVertical_bias="0.91"
        app:layout_constraintStart_toStartOf="@id/Info"
        app:layout_constraintEnd_toEndOf="@id/Info" />

    <ImageView
        android:id="@+id/homebutton"
        android:layout_width="20sp"
        android:layout_height="20sp"
        app:srcCompat="@drawable/home_button"
        app:layout_constraintTop_toTopOf="@id/colored_bar"
        app:layout_constraintBottom_toTopOf="@+id/Home"
        app:layout_constraintVertical_bias="0.7"
        app:layout_constraintStart_toStartOf="@id/DogGoneTroubleMoviePoster"
        app:layout_constraintEnd_toEndOf="@id/DogGoneTroubleMoviePoster" />

    <ImageView
        android:id="@+id/comingsoonbutton"
        android:layout_width="20sp"
        android:layout_height="20sp"
        app:srcCompat="@drawable/comingsoonbutton"
        app:layout_constraintTop_toTopOf="@id/colored_bar"
        app:layout_constraintBottom_toTopOf="@+id/ComingSoon"
        app:layout_constraintVertical_bias="0.7"
        app:layout_constraintStart_toStartOf="@id/RatatouilleMoviePoster"
        app:layout_constraintEnd_toEndOf="@id/RatatouilleMoviePoster" />

    <ImageView
        android:id="@+id/playsomethingbutton"
        android:layout_width="20sp"
        android:layout_height="20sp"
        app:srcCompat="@drawable/playsomethingbutton"
        app:layout_constraintTop_toTopOf="@id/colored_bar"
        app:layout_constraintBottom_toTopOf="@+id/PlaySomething"
        app:layout_constraintVertical_bias="0.7"
        app:layout_constraintStart_toStartOf="@id/Sing2MoviePoster"
        app:layout_constraintEnd_toEndOf="@id/Sing2MoviePoster" />

    <ImageView
        android:id="@+id/downloadbutton"
        android:layout_width="20sp"
        android:layout_height="20sp"
        app:srcCompat="@drawable/downloadbutton"
        app:layout_constraintTop_toTopOf="@id/colored_bar"
        app:layout_constraintBottom_toTopOf="@+id/Downloads"
        app:layout_constraintVertical_bias="0.7"
        app:layout_constraintStart_toStartOf="@id/TurboMoviePoster"
        app:layout_constraintEnd_toEndOf="@id/TurboMoviePoster" />

    <ImageView
        android:id="@+id/castsymbol"
        android:layout_width="25sp"
        android:layout_height="25sp"
        app:srcCompat="@drawable/castsymbol"
        app:layout_constraintTop_toTopOf="@id/DumboMoviePoster"
        app:layout_constraintBottom_toTopOf="@+id/MyList"
        app:layout_constraintVertical_bias="0.3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.7"/>

    <ImageView
        android:id="@+id/searchsymbol"
        android:layout_width="30sp"
        android:layout_height="30sp"
        app:srcCompat="@drawable/searchsymbol"
        app:layout_constraintTop_toTopOf="@id/DumboMoviePoster"
        app:layout_constraintBottom_toTopOf="@+id/MyList"
        app:layout_constraintVertical_bias="0.3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.825"/>

    <ImageView
        android:id="@+id/avatar"
        android:layout_width="25sp"
        android:layout_height="25sp"
        app:srcCompat="@drawable/avatar"
        app:layout_constraintTop_toTopOf="@id/DumboMoviePoster"
        app:layout_constraintBottom_toTopOf="@+id/MyList"
        app:layout_constraintVertical_bias="0.3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.95"/>

    <ImageView
        android:id="@+id/A1"
        android:layout_width="45sp"
        android:layout_height="45sp"
        app:srcCompat="@drawable/animalflix_logo"
        app:layout_constraintTop_toTopOf="@id/DumboMoviePoster"
        app:layout_constraintBottom_toBottomOf="@+id/DumboMoviePoster"
        app:layout_constraintVertical_bias="0.015"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.005"/>



</androidx.constraintlayout.widget.ConstraintLayout>